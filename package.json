{
  "name": "healthcare-management-system",
  "version": "1.0.0",
  "description": "نظام إدارة الرعاية الصحية الشامل لشبكة من 6 مستشفيات - Comprehensive Healthcare Management System for 6 Hospital Network",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "cd backend && npm run dev",
    "frontend:dev": "cd frontend && npm start",
    "backend:install": "cd backend && npm install",
    "frontend:install": "cd frontend && npm install",
    "install:all": "npm run backend:install && npm run frontend:install",
    "build": "npm run frontend:build && npm run backend:build",
    "frontend:build": "cd frontend && npm run build",
    "backend:build": "cd backend && npm run build",
    "test": "npm run backend:test && npm run frontend:test",
    "backend:test": "cd backend && npm test",
    "frontend:test": "cd frontend && npm test",
    "db:setup": "cd backend && npm run db:setup",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed",
    "lint": "npm run backend:lint && npm run frontend:lint",
    "backend:lint": "cd backend && npm run lint",
    "frontend:lint": "cd frontend && npm run lint",
    "start": "npm run backend:start",
    "backend:start": "cd backend && npm start"
  },
  "keywords": [
    "healthcare",
    "hospital",
    "management",
    "medical",
    "system",
    "رعاية صحية",
    "مستشفى",
    "إدارة",
    "طبي",
    "نظام"
  ],
  "author": "Healthcare Development Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aalamriswcc/healthcare-management-system.git"
  },
  "bugs": {
    "url": "https://github.com/aalamriswcc/healthcare-management-system/issues"
  },
  "homepage": "https://github.com/aalamriswcc/healthcare-management-system#readme"
}
